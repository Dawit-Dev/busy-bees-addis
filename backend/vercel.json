{
	"version": 2,
	"builds": [
		{
			"src": "school_project/wsgi.py",
			"use": "@vercel/python",
			"config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
		},
		{
			"src": "build_files.sh",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "backend/kindergarten/staticfiles"
			}
		}
	],
	"routes": [
		{
			"src": "/static/(.*)",
			"dest": "/static/$1"
		},
		{
			"src": "/(.*)",
			"dest": "school_project/wsgi.py"
		}
	],
	"outputDirectory": "backend/kindergarten/staticfiles"
}
